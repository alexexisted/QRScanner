<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_nude"
            android:orientation="vertical">

        <TextView
                android:id="@+id/header_title"
                android:text="Ordered Item"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/TV_itemId"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:text="item id"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/TV_offerId"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:text="offer id"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/TV_itemName"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:text="item nsme"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/TV_itemPrice"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:text="price"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/TV_itemFinalPrice"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:text="final price"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/TV_quantity"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:text="quantity"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/TV_internalHWB"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:text="internalHWB"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />

        <TextView
                android:id="@+id/TV_externalHWB"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:text="externalHWB"
                android:textSize="20sp"
                android:layout_height="wrap_content"
        />

    </LinearLayout>

</androidx.cardview.widget.CardView>